<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="7dp"
    app:cardCornerRadius="15dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:requiresFadingEdge="horizontal"
            android:id="@+id/ivNewsHeader"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/news_header"
            android:src="@drawable/download" />

        <TextView
            android:id="@+id/tvHeadline"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_below="@id/ivNewsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvNewsLocation"
            android:layout_marginVertical="7dp"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@id/tvHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvNewsTime"
            android:layout_marginVertical="7dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_below="@id/tvNewsLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>